            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_LIB_STATIC=OFF",
                "-DBUILD_CLI=OFF",
                "-DBUILD_MAN=OFF",
                "-DBUILD_BASH_COMPLETION=OFF"
            ],
            "cleanup": [
