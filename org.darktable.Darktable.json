                    "sha256": "78dbca39115a1c526e6728588753955ee75fa7f5bb1a6e238bed5b6d66f91fd7"
                }
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/*.la",
                "/lib/pkgconfig",
                "/share/aclocal"
            ]
        },
        {
            "name": "graphicsmagick",
            "builddir": true,
            "config-opts": [
                "--enable-shared"
            ],
            "cleanup": [
                "/bin/GraphicsMagick*config"
            ],
            "sources": [
                {
                    "type": "archive",
